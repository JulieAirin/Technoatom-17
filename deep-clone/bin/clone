#!/usr/bin/env perl

use 5.010;
use strict;
use warnings;
BEGIN{
    if ($] < 5.018) {
        package experimental;
        use warnings::register;
    }
}

our $VERSION = 1.0;

use FindBin;
use lib "$FindBin::Bin/../lib";

use DeepClone;
use Data::Dumper;

local $Data::Dumper::Indent = 0;

#replace $orig value with your structure
my $orig   = {
    a => [ 1, 2, 3 ],
    b => { c => 4, d => 5 },
    e => [
        {
            k1 => 'v1',
            k2 => [ qw/a b c/],
            k3 => undef,
            k4 => { kk1 => 'x', kk2 => 'y' },
        },
        [ qw/x1 x2 x3/ ],
        undef,
        1, 2, 3, qw/a b c/,
    ],
    f => {
        k1 => 'v1',
        k2 => [ qw/a b c/ ],
        k3 => undef,
        k4 => { kk1 => 'x', kk2 => 'y', kk3 => [ qw/a b c/ ], kk4 => { a => 1, b => 2 } },
    },
    g => 1,
    h => 'string',
    i => undef,
};
my $cloned = DeepClone::clone($orig);

say "ORIGINAL ", Dumper($orig);
say "CLONED   ", Dumper($cloned);
